<form method="post" id="fileForm" enctype="multipart/form-data" asp-controller="Home/ProcessFile" asp-action="Index">
    <h2>@ViewData["Result"]</h2>
    <h2>@ViewData["Errors"]</h2>

    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" name="password" placeholder="PW KK told you" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
<style>

    body {
        background-image: url("/images/rotateLamprey.gif");
        background-repeat: repeat;
        color: red;
        font-size: 36px;
        font-weight: bold;
    }
    .container {
        margin-left: auto;
        width: 25%;
        margin-right: auto;
    }
</style>